[Unit]
Description="dummy-app"
Requires=network.target
After=network.target

[Service]
Type=simple
Environment="APP_NAME=dummy-app"
WorkingDirectory=/var/app/current/dummy-app
ExecStart=/usr/bin/zsh -c "/var/app/current/entrypoint.sh >> /var/app/logs/dummy-app.log 2>&1"
Restart=always
RestartSec=3

[Install]
WantedBy=multi-user.target
